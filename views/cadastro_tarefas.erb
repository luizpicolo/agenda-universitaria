<h3>Cadastrar Tarefa</h3>
<form data-response="#message" id="form" method="post" action="/tarefas">
    <div class="row">
        <div class="large-8 columns">
            <label for="titulo">Título</label>
            <input type="text" name="titulo" id="titulo" required>
        </div>
        <div class="large-2 columns">
            <label for="data_inicio">Data Início</label>
            <input type="text" name="data_inicio" id="data_inicio" class="mask-date" required>
        </div>
        <div class="large-2 columns">
            <label for="data_termino">Data Término</label>
            <input type="text" name="data_termino" id="data_termino" required>
        </div>
    </div>
    <div class="row">
        <div class="large-4 columns">
            <label>Categoria</label>
            <select name="categoria">
                <option></option>
                <option value="1">Desenvolvimento Web</option>
                <option value="2">Projeto de Banco</option>
                <option value="3">Linguagem de Programação</option>
            </select>
        </div>
        <div class="large-4 columns">
            <label>Prioridade</label>
            <select name="prioridade">
                <option value="1">Baixa</option>
                <option value="2" selected>Média</option>
                <option value="3">Alta</option>
            </select>
        </div>
        <div class="large-4 columns">
            <label>Visibilidade</label>
            <select name="visibilidade">
                <option value="1" selected>Público</option>
                <option value="2">Amigos</option>
                <option value="3">Somente eu</option>
            </select>
        </div>
    </div>
    <br>
    <div class="row">
        <div class="large-12 columns">
            <label for="descricao">Descrição</label>
            <textarea name="descricao" id="descricao"></textarea>
        </div>
    </div>
    <br>
    <div class="coluna-12" id="message"></div>
    <div class="row">
        <div class="large-12 columns text-right">
            <input type="submit" class="button" value="Gravar">
        </div>
    </div>
</form>

<a class="close-reveal-modal">&#215;</a>